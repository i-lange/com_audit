<?xml version="1.0" encoding="utf-8"?>
<form>
    <fieldset name="details" label="COM_ISEO_TAB_RESULT">
        <field name="id"
               type="number"
               label="JGLOBAL_FIELD_ID_LABEL"
               default="0"
               class="readonly"
               readonly="true"/>
        <field name="title"
               type="text"
               label="JGLOBAL_TITLE"
               required="true"
               maxlength="100"/>
        <field name="result"
               editor="|"
               buttons="false"
               filter="JComponentHelper::filterText"
               type="editor"
               required="true"
               message="Result required"
               label="COM_ISEO_FIELD_RESULT"
               description="COM_ISEO_FIELD_RESULT_DESC"/>
        <field name="alias"
               type="text"
               label="JFIELD_ALIAS_LABEL"
               maxlength="100"
               description="JFIELD_ALIAS_DESC"
               hint="JFIELD_ALIAS_PLACEHOLDER"/>           
        <field name="published"
               type="list"
               label="JSTATUS"
               default="1"
               validate="options"
               description="JFIELD_PUBLISHED_DESC"
               class="inputbox"
               size="1">
            <option value="1">JPUBLISHED</option>
            <option value="0">JUNPUBLISHED</option>
            <option value="2">JARCHIVED</option>
            <option value="-2">JTRASHED</option>
        </field>
        <field name="catid"
               type="categoryedit"
               label="JCATEGORY"
               extension="com_iseo"
               addfieldprefix="Joomla\Component\Categories\Administrator\Field"
               required="true"
               default=""/>
    </fieldset>

    <fieldset name="options" label="COM_ISEO_TAB_OPTIONS">
        <field name="url"
               validate="url"
               type="url"
               required="true"
               message="URL required"
               label="COM_ISEO_FIELD_URL"
               description="COM_ISEO_FIELD_URL_DESC"/>
        <field name="uniqid"
               filter="string"
               type="text"
               required="true"
               class="readonly"
               readonly="true"
               message="Uniqid required"
               label="COM_ISEO_FIELD_UNIQID"
               description="COM_ISEO_FIELD_UNIQID_DESC"/>
        <field name="created"
               type="calendar"
               label="JGLOBAL_FIELD_CREATED_LABEL"
               translateformat="true"
               showtime="true"
               filter="user_utc"
               description="JGLOBAL_FIELD_CREATED_DESC"/>
        <field name="created_by"
               type="user"
               label="JGLOBAL_FIELD_CREATED_BY_LABEL"
               validate="UserId"
               default="0"
               description="JGLOBAL_FIELD_CREATED_BY_DESC"/>
        <field name="modified"
               type="calendar"
               label="JGLOBAL_FIELD_MODIFIED_LABEL"
               class="form-control"
               translateformat="true"
               showtime="true"
               readonly="true"
               filter="user_utc"/>
        <field name="modified_by"
               type="user"
               label="JGLOBAL_FIELD_MODIFIED_BY_LABEL"
               class="readonly"
               readonly="true"
               filter="unset"
               validate="UserId"
               default="0"
               description="JGLOBAL_FIELD_MODIFIED_BY_DESC"/>
        <field name="checked_out"
               type="hidden"
               filter="unset"/>
        <field name="checked_out_time"
               type="hidden"
               filter="unset"/>
        <field name="hits"
               type="text"
               label="JGLOBAL_HITS"
               class="readonly"
               readonly="true"
               filter="unset"
               default="0"/>        
    </fieldset>    
</form>
